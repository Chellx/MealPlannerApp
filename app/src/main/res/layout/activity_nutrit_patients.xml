<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritPatients"
    android:background="@drawable/gradient_background">



    <ImageView
        android:layout_width="218dp"
        android:layout_height="253dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="92dp"
        android:src="@drawable/nutritlogo"
        />


    <Spinner
        android:id="@+id/patientList"
        android:layout_width="208dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="362dp"
        android:background="#fff"
        android:drawSelectorOnTop="true"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/btn_viewMealPlans"
        android:layout_width="180dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="361dp"
        android:background="#00aeff"
        android:ems="16"
        android:text="View Meal Plans"
        android:textColor="#fff"
        android:theme="@style/buttonStyle" />

    <TextView
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="371dp"
        android:ems="26"
        android:hint="Comments"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="19dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/et_commentToPatient"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="426dp"
        android:background="#fff"
        android:ems="26"
        android:textColorHint="#000000"
        android:textSize="19dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="240dp" />

    <Button
        android:id="@+id/btn_addprofile"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="12dp"
        android:background="#00aeff"
        android:ems="16"
        android:text="SAVE"
        android:textColor="#fff"
        android:theme="@style/buttonStyle" />


</RelativeLayout>